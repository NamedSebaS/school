@using System.Data;
@using school.App_Code;

@{
    Layout = null;
}

<!DOCTYPE html>


@{
    SongMethods mySongMethods = new SongMethods();
    string file = @"~\App_Data\playlist.xml";
    DataSet ds = mySongMethods.GetAllSongs(file);
    Session["playlistClass"] = mySongMethods;       // aanpassing 1
    Session["file"] = file;                         // aanpassing 2
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Monkey</title>

</head>

<body>
    Hallo
    <table>
        @foreach (DataRow dr in ds.Tables["song"].Rows)
        {
            <tr>
                <td>@dr["id"]</td>
                <td>@dr["artist"]</td>
                <td>@dr["title"]</td>
                <td>@dr["year"]</td>
                <td>@dr["genre"] </td>
                <td>@dr["time"]</td>
                <td>@dr["file"]</td>
            </tr>
        }
    </table>
    <div>
        monkey boi is cool
    </div>
</body>
</html>

